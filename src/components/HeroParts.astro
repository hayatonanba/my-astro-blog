---
const { type = 'left', title, description, imageUrl } = Astro.props;
---

{type === "left" ? (
  <div class="flex flex-col md:flex-row items-center gap-6 p-6 md:p-11">
    <div class="w-full md:w-[320px] aspect-[4/3] overflow-hidden rounded-lg">
      <img
        src={imageUrl}
        alt={title}
        class="w-full h-full object-cover hover:scale-125 transition-transform duration-300"
      />
    </div>
    <div class="flex-1">
      <h2 class="text-xl md:text-2xl font-bold">{title}</h2>
      <p class="text-sm md:text-base text-gray-700 mt-2">{description}</p>
    </div>
  </div>
) : (
  <div class="flex flex-col md:flex-row-reverse items-center gap-6 p-6 md:p-11">
    <div class="w-full md:w-[320px] aspect-[4/3] overflow-hidden rounded-lg">
      <img
        src={imageUrl}
        alt={title}
        class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
      />
    </div>
    <div class="flex-1">
      <h2 class="text-xl md:text-2xl font-bold">{title}</h2>
      <p class="text-sm md:text-base text-gray-700 mt-2">{description}</p>
    </div>
  </div>
)}
